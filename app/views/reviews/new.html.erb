<h1>New review for <%= @restaurant.name %></h1>

<%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.number_field :rating, in: 0..5.0, step: 1.0 %>
  <%= f.input :content %>
  <%= f.submit 'Create Review', class: 'btn btn-success' %>
<% end %>

<%= link_to 'Back', restaurant_path(@restaurant), class: "btn btn-primary" %>
