<h1>Restaurants</h1>
<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone Number</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone_number %></td>
        <td><%= restaurant.category %></td>
      <td><%= link_to 'Show', restaurant_path(restaurant.id), class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

